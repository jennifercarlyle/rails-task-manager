<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed == true %>
  <p><%= "✅ This task has been completed!" %></p>
<% else %>
  <p><%= "❌ This task is not completed yet" %></p>
<% end %>

<p><%= link_to "Edit this task", edit_task_path %></p>
<p><%= link_to "Back to list", tasks_path %></p>
